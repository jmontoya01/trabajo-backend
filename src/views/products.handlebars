<div class="products__containter">
    {{#each products}}
    <div class="card">
        <h3>{{title}}</h3>
        <img src="{{thumbnails}}" alt="">
        <p class="card-p">Descripci√≥n: {{description}} </p>
        <p class="card-p">Precio: <strong>{{price}}</strong> </p>
        <p class="card-p">Categoria: {{category}} </p>
        <form action="/api/carts/{{../cartId}}/product/{{id}}" method="POST">
            <button class="btn" type="submit">Agregar al Carrito</button>
        </form>
    </div>
    {{/each}}
</div>
<div class="container__login">
    {{#if hasNextPage}}
    <a href="/products?page={{nextPage}}" class="btnNextPrevius"> Siguiente </a>
    {{/if}}
    {{#if hasPrevPage}}
    <a href="/products?page={{prevPage}}" class="btnNextPrevius"> Anterior </a>
    {{/if}}
    <p class="paragrap">Pagina {{currentPage}} de {{totalPages}} </p>
</div>

